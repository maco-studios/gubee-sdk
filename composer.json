{
    "name": "gubee/sdk",
    "description": "Gubee SDK for PHP",
    "type": "library",
    "authors": [
        {
            "name": "Marcos 'Marc√£o' Aurelio",
            "email": "macosaures+git@gmail.com"
        },
        {
            "name": "Gubee",
            "email": "contato@gubee.com.br"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "Gubee\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gubee\\SDK\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.5",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "cs": [
            "@cs:check",
            "@cs:stan"
        ],
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "cs:stan": "vendor/bin/phpstan analyse src tests --level=6",
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:integration": "phpunit --testsuite=Integration",
        "test:unit": "phpunit --testsuite=Unit"
    }
}