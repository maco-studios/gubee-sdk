{
    "name": "gubee/sdk",
    "description": "Gubee SDK for PHP",
    "type": "library",
    "authors": [
        {
            "name": "Marcos 'Marc√£o' Aurelio",
            "email": "macosaures+git@gmail.com"
        },
        {
            "name": "Gubee",
            "email": "contato@gubee.com.br"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1",
        "php-http/client-common": "^2.7",
        "php-http/discovery": "*",
        "php-http/multipart-stream-builder": "^1.3",
        "psr/http-client": "^1.0 | ^2.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/log": "^1.1"
    },
    "autoload": {
        "files": [
            "src/bootstrap.php"
        ],
        "psr-4": {
            "Gubee\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gubee\\SDK\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "guzzlehttp/guzzle": "^7.8",
        "laminas/laminas-coding-standard": "^2.5",
        "monolog/monolog": "^2.9",
        "pact-foundation/pact-php": "^8.1",
        "php-http/curl-client": "^2.3",
        "php-http/mock-client": "^1.6",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6"
    },
    "scripts": {
        "cs": [
            "@cs:check",
            "@cs:stan"
        ],
        "cs:check": "phpcs",
        "cs:fix": "phpcbf",
        "cs:stan": "vendor/bin/phpstan analyse src test --level=6",
        "test": [
            "@test:unit",
            "@test:integration"
        ],
        "test:integration": "phpunit --testsuite=Integration",
        "test:contract": "phpunit --testsuite=Contract",
        "test:unit": "phpunit --testsuite=Unit",
        "test:coverage": "phpunit --coverage-html=var/test/coverage"
    }
}